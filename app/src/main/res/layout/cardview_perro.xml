<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_cardCornerRadius">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardview_padding_linearLayout">
        <ImageView
            android:id="@+id/imageViewFotoPerroCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/cardview_ancho_iconos"
                android:layout_height="@dimen/cardview_alto_iconos"
                android:background="@drawable/dog_bone_48"
                android:layout_alignParentLeft="true"
                android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center">


            <TextView
                android:id="@+id/textViewNombrePerroCardView"
                android:layout_width="@dimen/cardview_ancho_nombre_perro"
                android:layout_height="@dimen/cardview_alto_iconos"
                android:text="@string/nombre_perro"
                android:textSize="@dimen/cardview_tamano_texto"
                android:textStyle="bold"
                android:gravity="center"/>


        <!--    <ImageView
                android:id="@+id/imagenViewRaitingCardView"
                android:layout_width="@dimen/cardview_ancho_iconos"
                android:layout_height="@dimen/cardview_alto_iconos"
                android:background="@drawable/dog_bone_50"/>-->

        </LinearLayout>

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raiting_perro"
                android:textSize="@dimen/cardview_tamano_texto"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>